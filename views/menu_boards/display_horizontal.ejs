</style>
</head>
<% 
    const sliceArray = slices.custom_menu.custom_sections[0].custom_items;
    const promo = slices.custom_menu.custom_sections[1].description;
    const header = slices.custom_menu.name;
    const header_array = header.split(' ');
    var today = new Date();
    var dd = today.getDate();
    var mm = today.getMonth() + 1;
    var today = `${mm}/${dd}`;
%>
<body>
    <div class="container wrapper">
        <div class="ui equal width grid">
                <div class="column meat">
                    <div class="meat-slice">
                        <h1 class="title meat"><%=sliceArray[1].name%></h1>
                        <% 
                            let meat_array = sliceArray[1].description;
                            meat_array = meat_array.split(',');
                        %>
                        
                            <p class="ingredients">
                                <% for (let i = 0; i < meat_array.length; i++){ %>
                                <span><%=meat_array[i]%></span><br>
                            <% }%>
                            
                            <span class="price meat">$<%=sliceArray[0].custom_containers[0].price%></span>
                            </p>
                            
                    </div>
                </div>
                <div class="column headline">
                    
                    <div class="header 1st"><span class="slices" id="demo1"><%= header_array[0]%></span></div>
                    <div class="header 2nd"><span class="of"><%= header_array[1]%></span> &nbsp;&nbsp;<span class="the"><%= header_array[2]%></span></div>
                    <div class="header 3rd"><span class="day"><%= header_array[3]%></span></div>
                    <div class="veggie-slice">
                        <div class"pep-cheese">
                            <% 
                                let pep_cheese_array = sliceArray[2].name;
                                pep_cheese_array = pep_cheese_array.split(' ');
                            %>
                            <h1 class="title pep_cheese">
                                <% for (let i = 0; i < pep_cheese_array.length; i++) { %>
                                    <span><%=pep_cheese_array[i]%><br></span>
                                <% } %>
                                <span class="price pep-cheese">$<%=sliceArray[2].custom_containers[0].price%></span>
                            </h1>
                            
                        </div>
                    </div>
                </div>    
                <div class="column veggie">
                    <div class="meat-slice">
                        <h1 class="title"><%=sliceArray[0].name%></h1>
                        <% 
                            let veggie_array = sliceArray[0].description;
                            veggie_array = veggie_array.split(',');
                            let date = Date.now();
                        %>
                        <p class="ingredients">
                            <% for (var i = 0; i < veggie_array.length; i++) {%>
                                <span><%=veggie_array[i]%></span><br>
                            <% } %>
                            <span class="price">$<%=sliceArray[0].custom_containers[0].price%></span>
                        </p>
                        
                    </div>
                </div>
        </div>
        <div class="ui grid">
            <div class="sixteen wide column">
                <p class="promo"><span><%=promo%>&nbsp;â€¢&nbsp;updated&nbsp;on&nbsp;<%=today%></span></p>
            </div>
        </div>
    </div>
</body>
